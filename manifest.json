{
	"manifest_version": 2,
	"name": "P2P manager",
	"description": "A chrome extension for managing p2p orders",
	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},
	"action": {
		"default_icon": "p2p.png"
	},
	"icons": {
		"128": "p2p.png"
	},
	"permissions": ["activeTab", "webRequest"],
	"content_scripts": [
		{
			"matches": [
				"https://www.binance.com/*",
				"https://p2p.binance.com/*",
				"https://accounts.binance.com/*"
			],
			"js": ["bundle.js"]
		}
	]
}
